<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMIActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="70dp"
            android:text="Name"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_toEndOf="@+id/nameLabel"
            android:layout_toRightOf="@+id/nameLabel"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/heightLabel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/nameLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="50dp"
            android:text="Height (M)"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/heightInput"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/nameInput"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_toEndOf="@+id/heightLabel"
            android:layout_toRightOf="@+id/heightLabel"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/weightLabel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/heightLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="50dp"
            android:text="Weight (KG)"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/weightInput"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/heightInput"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_toEndOf="@+id/weightLabel"
            android:layout_toRightOf="@+id/weightLabel"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/weightLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="50dp"
            android:text="Gender"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_below="@+id/weightInput"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@id/genderLabel"
            android:layout_toRightOf="@id/genderLabel"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/genderLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="50dp"
            android:text="Save"
            android:onClick="saveOnClick"
            android:textSize="20sp" />

        <Button
            android:id="@+id/calculateBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/saveBtn"
            android:layout_toRightOf="@+id/saveBtn"
            android:text="Calculate"
            android:onClick="calculateOnClick"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/resultField"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/calculateBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            ></TextView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>